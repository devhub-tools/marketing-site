  <!-- 4. All Features Section -->
  <section class="py-16" style="background-color: #08111F;">
    <div class="container mx-auto px-6">
      <h2 class="text-3xl font-bold mb-12 text-center">All Plans Include</h2>

      <div class="grid md:grid-cols-3 gap-8 max-w-7xl mx-auto">
