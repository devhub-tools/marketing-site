---
import Layout from "../layouts/Layout.astro";
import Features from "../components/Features.astro";
---

<Layout>
  <!-- Hero Section -->
  <section class="hero-gradient py-16 relative">
    <div class="parallax-bg"></div>
    <div class="gradient-overlay"></div>
    <div class="container mx-auto px-6 text-center">
      <h1 class="text-4xl md:text-5xl font-bold leading-tight mb-4">
        Simple Pricing.
        <span class="block text-3xl text-blue-400"
          >No bullsh*t fees or sales calls.</span
        >
      </h1>
      <p class="text-xl text-gray-300 mb-8 max-w-3xl mx-auto">
        We don't believe in complicated pricing tiers, hidden costs, or
        "enterprise" packages that require six Zoom calls to understand. Choose
        how you want to deploy, pay a fair price, and get back to building cool
        stuff.
      </p>
    </div>
  </section>

  <!-- Pricing Section -->
  <section class="py-12 bg-gray-900 relative">
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        <!-- Cloud Hosted -->
        <div
          class="pricing-card pricing-card-featured rounded-lg p-8 bg-gray-800"
        >
          <div class="flex-1">
            <h3 class="text-2xl font-bold mb-2">Cloud Hosted</h3>
            <p class="text-gray-400 mb-6">
              Near-instant setup with no infrastructure to maintain
            </p>

            <div class="mb-6">
              <span class="text-4xl font-bold">$12</span>
              <span class="text-gray-400">/ user / month</span>
              <p class="text-gray-400 text-sm mt-1">
                Billed monthly, cancel anytime
              </p>
            </div>

            <ul class="space-y-3 mb-8">
              <li class="flex items-start">
                <svg
                  class="w-5 h-5 text-green-500 mr-2 mt-1 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Starts as 14-day free trial</span>
              </li>
              <li class="flex items-start">
                <svg
                  class="w-5 h-5 text-green-500 mr-2 mt-1 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span>All features included</span>
              </li>
              <li class="flex items-start">
                <svg
                  class="w-5 h-5 text-green-500 mr-2 mt-1 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Unlimited databases</span>
              </li>
              <li class="flex items-start">
                <svg
                  class="w-5 h-5 text-green-500 mr-2 mt-1 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Unlimited queries and workflows</span>
              </li>
              <li class="flex items-start">
                <svg
                  class="w-5 h-5 text-green-500 mr-2 mt-1 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span>No credit card required to start</span>
              </li>
              <li class="flex items-start">
                <svg
                  class="w-5 h-5 text-green-500 mr-2 mt-1 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Automatic updates and maintenance</span>
              </li>
              <li class="flex items-start">
                <svg
                  class="w-5 h-5 text-green-500 mr-2 mt-1 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Premium support</span>
              </li>
            </ul>
          </div>

          <a
            href="https://app.querydesk.com/signup"
            class="btn-primary px-8 py-3 rounded-md font-medium text-center block"
          >
            Start Your Trial
          </a>
        </div>

        <!-- Self-Hosted -->
        <div class="pricing-card rounded-lg p-8 bg-gray-800">
          <div class="flex-1">
            <h3 class="text-2xl font-bold mb-2">Self-Hosted</h3>
            <p class="text-gray-400 mb-6">
              Run Querydesk in your own infrastructure
            </p>

            <div class="mb-6">
              <span class="text-4xl font-bold">Free</span>
              <span class="text-gray-400"> for small teams</span>
              <p class="text-gray-400 text-sm mt-1">
                Up to 5 users, on-prem installation only
              </p>
            </div>

            <ul class="space-y-3 mb-8">
              <li class="flex items-start">
                <svg
                  class="w-5 h-5 text-green-500 mr-2 mt-1 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span>All features included</span>
              </li>
              <li class="flex items-start">
                <svg
                  class="w-5 h-5 text-green-500 mr-2 mt-1 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Complete control over your instance</span>
              </li>
              <li class="flex items-start">
                <svg
                  class="w-5 h-5 text-green-500 mr-2 mt-1 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Data never leaves your network</span>
              </li>
              <li class="flex items-start">
                <svg
                  class="w-5 h-5 warning-icon mr-2 mt-1 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                  ></path>
                </svg>
                <span>$12/user/month for teams larger than 5</span>
              </li>
              <li class="flex items-start">
                <svg
                  class="w-5 h-5 warning-icon mr-2 mt-1 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                  ></path>
                </svg>
                <span>Requires manual setup and maintenance</span>
              </li>
              <li class="flex items-start">
                <svg
                  class="w-5 h-5 warning-icon mr-2 mt-1 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                  ></path>
                </svg>
                <span>Manual updates</span>
              </li>
              <li class="flex items-start">
                <svg
                  class="w-5 h-5 warning-icon mr-2 mt-1 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                  ></path>
                </svg>
                <span>No premium support (with free tier)</span>
              </li>
            </ul>
          </div>

          <a
            href="https://github.com/querydesk/installation"
            class="btn-secondary px-8 py-3 rounded-md font-medium text-center block"
          >
            View Installation Guide
          </a>
        </div>
      </div>

      <div class="mt-10 text-center">
        <p class="text-lg text-blue-300">
          Big business, enterprise, or have a lot of users? <a
            href="/contact"
            class="underline hover:text-blue-400"
            >Contact us for custom pricing</a
          > — no salesy sales, or really any sales at all.
        </p>
      </div>
    </div>
  </section>

  <Features />
</Layout>
