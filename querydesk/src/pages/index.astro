---
import Layout from "../layouts/Layout.astro";
import Features from "../components/Features.astro";
import Logos from "../components/Logos.astro";
import { Image } from "astro:assets";
import queryView from "../assets/features/query.png";
// import Video from "../components/Video.astro";
---

<Layout>
  <!-- Hero Section -->
  <section class="hero-gradient py-20 relative">
    <div class="parallax-bg"></div>
    <div class="gradient-overlay"></div>
    <div class="container mx-auto px-6">
      <div class="flex flex-col lg:flex-row items-center">
        <div class="lg:w-1/2 fade-in">
          <h1 class="text-4xl font-bold leading-tight mb-6">
            A dev-first platform for secure, scalable querying.
            <span class="block text-2xl text-blue-400"
              >Built for developers, by developers</span
            >
          </h1>
          <p class="text-xl text-gray-300 mb-8">
            Querydesk is a developer-first platform that lets your team safely
            run production database queries in minutesâ€”no demos or sales calls.
            Unless, of course, you really want to talk to us.
          </p>
          <div
            class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4"
          >
            <a
              href="https://auth.devhub.cloud/signup"
              class="btn-primary px-8 py-3 rounded-md font-medium text-center"
            >
              Start Your Free Trial
            </a>
          </div>
          <p class="text-gray-400 mt-4 text-sm">
            Get your first query running in under 5 minutes. No credit card
            required.
          </p>
        </div>
        <div class="lg:w-1/2 mt-12 lg:mt-0 fade-in">
          <div class="relative">
            <!-- Decorative background element -->
            <div
              class="absolute inset-0 bg-gradient-to-r from-blue-500/10 to-purple-500/10 rounded-lg transform rotate-2"
            >
            </div>

            <div
              class="relative z-10 rounded-lg shadow-2xl border border-gray-800 overflow-hidden"
            >
              <Image src={queryView} alt="query view" class="w-full h-auto" />

              <!-- Overlay caption -->
            </div>

            <!-- Badge overlay -->
          </div>
        </div>
      </div>
    </div>
  </section>

  <Logos />

  <!-- <Video /> -->

  <Features />

  <!-- Testimonials Section -->
  <section class="py-20" style="background-color: var(--background);">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <p class="text-xl text-[var(--text)] max-w-2xl mx-auto">
          Obligatory testimonials from amazing people that love Querydesk.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <!-- Testimonial 1 -->
        <div
          class="bg-white rounded-lg p-8 border border-gray-200 interactive-card"
        >
          <div class="flex items-center mb-4">
            <div class="text-[var(--interactive)]">
              <svg
                class="w-10 h-10"
                fill="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
