---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <!-- Hero Section -->
  <section class="hero-gradient py-20 relative">
    <div class="parallax-bg"></div>
    <div class="gradient-overlay"></div>
    <div class="container mx-auto px-6">
      <div class="flex flex-col lg:flex-row items-center">
        <div class="lg:w-1/2 fade-in">
          <h1 class="text-4xl md:text-5xl font-bold leading-tight mb-6">
            Run Production Queries.
            <span class="block text-blue-400"
              >The Way Developers Would Build It</span
            >
          </h1>
          <p class="text-sm text-blue-300 -mt-4 mb-4 font-medium italic">
            (Because Developers Did Build It)
          </p>
          <p class="text-xl text-gray-300 mb-8">
            Querydesk is a developer-first platform that lets your team safely
            run production database queries in minutes—no demos or sales calls.
            Unless, of course, you really want to talk to us.
          </p>
          <div
            class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4"
          >
            <a
              href="https://app.querydesk.com/signup"
              class="btn-primary px-8 py-3 rounded-md font-medium text-center"
            >
              Start Your Free Trial
            </a>
          </div>
          <p class="text-gray-400 mt-4 text-sm">
            Get your first query running in under 5 minutes. No credit card
            required.
          </p>
        </div>
        <div class="lg:w-1/2 mt-12 lg:mt-0 fade-in">
          <div class="relative">
            <!-- Decorative background element -->
            <div
              class="absolute inset-0 bg-gradient-to-r from-blue-500/10 to-purple-500/10 rounded-lg transform rotate-2"
            >
            </div>

            <!-- Screenshot container with shadow and border -->
            <div
              class="relative z-10 rounded-lg shadow-2xl border border-gray-800 overflow-hidden"
            >
              <img
                src="https://devhub.tools/_next/static/media/query-view.7d188608.png"
                alt="Screenshot of Querydesk interface showing a query and the results of a query"
                class="w-full h-auto"
              />

              <!-- Overlay caption -->
            </div>

            <!-- Badge overlay -->
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- 3. Video Section -->
