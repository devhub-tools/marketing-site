---
import Layout from "../layouts/Layout.astro";
import TeamMember from "../components/TeamMember.astro";

import michael from "../assets/employees/michael.png";
import josh from "../assets/employees/josh.png";
import callie from "../assets/employees/callie.png";
import brigg from "../assets/employees/brigg.png";
---

<Layout>
  <section class="py-20 hero-gradient">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold mb-4">Meet the Team</h2>
        <p class="text-xl text-gray-400 max-w-2xl mx-auto">
          We're a team of developers, engineers, and product thinkers who've
          experienced the pain of database operations firsthand.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Team Member 1 -->
        <TeamMember
          name="Michael St Clair"
          title="CTO & Principal Architect"
          description="Leading the technical vision and architecture of QueryDesk. Passionate about creating robust, scalable systems that solve real developer problems."
          image={michael}
        />

        <TeamMember
          name="Josh Mackelprang"
          title="CEO"
          description="Driving the vision and strategy for QueryDesk with a focus on building products that developers actually want to use, without the enterprise sales friction."
          image={josh}
        />

        <TeamMember
          name="Callie Birdsall-Chambers"
          title="CMO"
          description="Leading marketing strategy with a focus on developer-first messaging that respects the intelligence and time of technical audiences."
          image={callie}
        />

        <TeamMember
          name="Brigg Angus"
          title="COO"
          description="Overseeing operations and ensuring QueryDesk delivers a seamless experience from signup to daily use with a focus on developer productivity."
          image={brigg}
        />
      </div>
    </div>
  </section>
</Layout>
